{% extends 'BaffordSimpleCmsBundle::layout.admin.html.twig' %}

{% block bafford_simplecms_admin_content %}
<h1>Page creation</h1>

<form action="{{ path('bafford_simplecms_admin_pages_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('bafford_simplecms_admin_pages') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
