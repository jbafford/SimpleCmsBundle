{% extends 'BaffordSimpleCmsBundle::layout.admin.html.twig' %}

{% block bafford_simplecms_admin_content %}
<h1>Page list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Slug</th>
            <th>Url</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('bafford_simplecms_admin_pages_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.url }}</td>
            <td>{{ entity.title }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('bafford_simplecms_admin_pages_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bafford_simplecms_admin_pages_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('bafford_simplecms_admin_pages_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
